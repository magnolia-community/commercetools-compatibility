<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
  <name>commercetools-integration</name>
  <displayName>${project.name}</displayName>
  <description>${project.description}</description>
  <class>info.magnolia.commercetools.integration.CommerceToolsIntegrationModule</class>
  <versionHandler>info.magnolia.commercetools.integration.setup.CommerceToolsIntegrationModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <components>
    <id>main</id>
    <component>
      <type>info.magnolia.commercetools.integration.templating.CommerceToolsTemplatingFunctions</type>
      <implementation>info.magnolia.commercetools.integration.templating.CommerceToolsTemplatingFunctions</implementation>
      <scope>singleton</scope>
    </component>
    <component>
      <type>info.magnolia.commercetools.integration.service.CommerceToolsServices</type>
      <implementation>info.magnolia.commercetools.integration.service.CommerceToolsServices</implementation>
      <scope>singleton</scope>
    </component>
  </components>

  <components>
    <id>app-ctBrowser</id>
  </components>

  <components>
    <id>app-ctBrowser-browser</id>
    <component>
      <type>info.magnolia.ui.workbench.tree.TreeView</type>
      <implementation>info.magnolia.commercetools.integration.app.browser.contentview.tree.CommerceToolsTreeViewImpl</implementation>
    </component>
  </components>

  <components>
    <id>app-ctSetup</id>
  </components>

  <components>
    <id>app-ctSetup-main</id>
    <component>
      <type>info.magnolia.commercetools.integration.app.configuration.CommerceToolsConfigurationSubApp</type>
      <implementation>info.magnolia.commercetools.integration.app.configuration.CommerceToolsConfigurationSubApp</implementation>
    </component>
    <component>
      <type>info.magnolia.commercetools.integration.app.configuration.CommerceToolsConfigurationView</type>
      <implementation>info.magnolia.commercetools.integration.app.configuration.CommerceToolsConfigurationViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.commercetools.integration.app.configuration.CommerceToolsConfigurationPresenter</type>
      <implementation>info.magnolia.commercetools.integration.app.configuration.CommerceToolsConfigurationPresenter</implementation>
    </component>
  </components>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>5.4.6/*</version>
    </dependency>
    <dependency>
      <name>rendering</name>
      <version>5.4.6/*</version>
    </dependency>
    <dependency>
      <name>templating</name>
      <version>5.4.6/*</version>
    </dependency>
    <dependency>
      <name>ui-framework</name>
      <version>5.4.6/*</version>
    </dependency>
    <dependency>
      <name>dam</name>
      <version>2.1/*</version>
    </dependency>
    <dependency>
      <name>dam-app</name>
      <version>2.1/*</version>
    </dependency>
    <dependency>
      <name>site</name>
      <version>1.0.6/*</version>
    </dependency>
    <dependency>
      <name>enterprise</name>
      <version>5.4.6/*</version>
    </dependency>
  </dependencies>
</module>
